                <Frame  CornerRadius="3" Padding="10,10,10,0" HasShadow="True"  BackgroundColor="White">
                    <StackLayout>
                        <custom:CustomLabel Text="Indique el monto de la reserva:"  FontAttributes="Bold" FontSize="16" TextColor="Black"/>

